<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sidea.version.nudge.mapper.PointMapper">

    <!-- 미작업 -->
    <!-- 포인트 내역 조회 -->
    <select id="getPointList" parameterType="String" resultType="sidea.version.nudge.dto.PointDto">
        select *
        from point
        where user_idx = #{userIdx}
    </select>

    <!--  포인트 충전  -->
    <select id="selectUserByUserEmail" parameterType="String" resultType="sidea.version.nudge.dto.UserDto">
        select user_email, user_pw, user_nickname, user_image, user_point_balance, user_donation_balance, user_leave
        from user
        where user_email = #{userEmail}
    </select>


</mapper>